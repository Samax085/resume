<header>
  <section>
  {{#with person}}
    <div class="card my-3">
      <div class="card-body">
      <h1>{{name}}</h1>
      Age
      {{age}}
      -
      {{gender}}
      </div>
    </div>
    
    {{#with address}}
      <address>{{country}}
        /
        {{city}}
        /
        {{state}}
        /
        {{street}}
        / (zip){{zip}}
      </address>
    {{/with}}
  </section>  
</header>

<body>
  <main>
    <div class="row">
      <div class="col-6">   
      <h2>My education:</h2>
      </div>
      <div class="col-6">
        <h2>Work Experience</h2>
      </div> 
    </div>   
    <div class="row">
      <div class="col-6">  
    {{#each education}}
    <div class="card">
      <div class="card-body">
      <p class="">Degree: <em>{{degree}};</em></p>
      <h3>Major: <em>{{major}};</em></h3>
      <h3>University: <em>{{university}};</em></h3>
      <h3>Graduation Year: <em>{{graduationYear}};</em></h3>
      </div>
    </div>
    {{/each}}
      </div>    
   
 <div class="col-6">
  {{#each workExperience}}   
      <div class="card">
        <div class="card-body">
          <ul>
            <li>Company - <b>{{company}}</b>;</li>
            <li>Position - <b>{{title}}</b>;</li>
            <li>Period of work: <b>{{startDate}} -- {{endDate}};</b></li>              
          </ul>
        </div>  
      </div>
    </div>
</div> 

    <div>
      <h2>About company:</h2>
        <ul>
          <li>Year founded - ({{year_founded}});</li>
          <li>Industry - {{industry}};</li>
          <br>

            {{#each employees}}
              <ul>
                <b>Employees:</b>
                <li>{{name}}
                   ({{position}}, 
                   {{department}})
                </li>
                <br>

              {{#each projects}}
                <b>Project:</b>
                  <li>Name - <em>{{name}}</em></li>
                  <li>Description - <em>{{description}}</em></li>
                  <li>Status - <em>{{status}}</em></li>
                <br>

                 {{#each teams}}
                   <b>Teams:</b>
                   <li>Team name: <em>{{team_name}};</em></li>
                    {{#with team_leader}}
                      <ul>                        
                        <li>Team leader: <em>{{name}};</em></li>
                        <li>Title: <em>{{title}};</em></li>
                        <li>Email: <em>{{email}};</em></li>
                      </ul>
                    {{/with}}
                    <br>

                    {{#each team_members}}
                    <b>Team members:</b>
                      <ul>
                        <li>Name: <em>{{name}};</em></li>
                        <li>Title: <em>{{title}};</em></li>
                        <li>Email: <em>{{email}};</em></li>
                        <li>Skills</li>
                          {{#each skills}}                                              
                          <ol>
                            <li>{{this}}</li>
                          </ol>
                          {{/each}}                                                    
                      </ul>
                      <br>

                      {{#each projects}}
                        <b>Projects:</b>
                          <ul>
                            <li>Name: <em>{{name}}</em>;</li>
                            <li>Description: <em>{{description}}</em>;</li> 
                            <li>Technologies:</li> 
                            {{#each technologies}}
                              <ul>
                                <li>{{this}}</li>
                              </ul>
                            {{/each}}
                            <br>

                            <li><b>Team members</b></li>

                            {{#each team_members}}
                              <ul>
                                <li>Name: <em>{{name}};</em></li>
                                <li>Title: <em>{{title}};</em></li>
                              </ul>
                            {{/each}}                          
                              
                          </ul>
                      {{/each}}
                    {{/each}}
                 {{/each}}
              {{/each}}
            {{/each}}
            </ul>
        </ul>
    </div>
    <hr>
    <br>
    
    <div>
      <h2> My responsibilities</h2>
        {{#with responsibilities}}
          <ul>
            <li><em>{{this}}</em>;</li>
            <li><em>{{1}}</em>;</li>
          </ul>
        {{/with}}
    </div>    
    {{/each}}
  </main>
  {{/with}}
</body>