<nav aria-label='breadcrumb'>
  <ol class='breadcrumb'>
    {{#each breadcrumb}}
      <li
        class='breadcrumb-item active'
        aria-current='page'
      ><a href='{{url}}'>{{name}}</a></li>
    {{/each}}
  </ol>
</nav>

<header>
  <h1>{{header}}</h1>
</header>

{{! Sort block }}
<div class='row'>
  {{#each sortBlock}}
    <div class='col-3'>
      <select
        class='form-select'
        aria-label='Default select example'
      >
        <option selected>{{placeholder}}</option>
        {{#each options}}
          <option value='{{value}}'>{{text}}</option>
        {{/each}}
      </select>
    </div>
  {{/each}}
</div>
{{! Sort block end }}

{{!  filterBlock }}
<div class='row my-5'>
  <div class='col-4'>
    <div class='card'>
      <div class='card-body'>
        {{#with filterBlock}}
          {{#with sellers}}
            <p>{{title}}</p>
            {{#each list}}
              <div class='form-check'>
                <input
                  class='form-check-input'
                  type='checkbox'
                  value=''
                  id='flexCheckDefault'
                />
                <label
                  class='form-check-label'
                  for='flexCheckDefault'
                >
                  {{value}}
                </label>
              </div>
            {{/each}}
          {{/with}}

          <hr />
          {{#with brands}}
            <p>{{title}}</p>
            {{#with input}}
              <input
                class='form-control form-control-sm mb-3'
                type='text'
                placeholder='{{placeholder}}'
                aria-label='.form-control-sm example'
              />
            {{/with}}
            {{#each options}}
              <div class='form-check'>
                <input
                  class='form-check-input'
                  type='checkbox'
                  value=''
                  id='flexCheckDefault'
                />
                <label
                  class='form-check-label'
                  for='flexCheckDefault'
                >
                  {{value}}
                </label>
              </div>
            {{/each}}
            <hr />
          {{/with}}

          {{#with price}}
            <p>{{title}}</p>
            {{#with range}}
              <input
                class='mb-2 form-control form-control-sm'
                type='text'
                placeholder='{{from}}'
                aria-label='.form-control-sm example'
              />

              <input
                class='mb-3 form-control form-control-sm'
                type='text'
                placeholder='{{to}}'
                aria-label='.form-control-sm example'
              />
            {{/with}}
            {{#with button}}
              <a
                class='btn btn-outline-secondary'
                href='{{link}}'
              >{{text}}</a>
            {{/with}}
          {{/with}}
          <hr />

          {{#each filterList}}
            <p>{{title}}</p>
            {{#each options}}
              <div class='form-check'>
                <input
                  class='form-check-input'
                  type='checkbox'
                  value=''
                  id='flexCheckDefault'
                />
                <label
                  class='form-check-label'
                  for='flexCheckDefault'
                >
                  {{value}}
                </label>
              </div>
            {{/each}}
            {{#unless @last}}
              <hr />
            {{/unless}}
          {{/each}}
        {{/with}}
      </div>
    </div>
  </div>
  {{!  filterBlock end }}
  <div class="col-4">
    {{#each goodsList}}
      {{> catalogitem}}
    {{/each}}
  </div>
</div>